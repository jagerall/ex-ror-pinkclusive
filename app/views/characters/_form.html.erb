
<%= simple_form_for(@character) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :pseudonym %>
    <%= f.input :age %>
    <%= f.input :pronoun %>
    <%= f.input :nationality %>
    <%= f.input :job %>
    <%= f.input :capacity %>
    <%= f.input :fact %>
    <%= f.input :personality %>
    <%= f.input :story %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
